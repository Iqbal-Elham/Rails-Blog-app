<%= stylesheet_link_tag 'users_styles'%>

<h1> List of All Users </h1>

<section class='users'>
   <% @users.each do |user| %>
    <%= link_to user_path(user.id) do %>
     <div class='user'>
       <%= image_tag(user.photo, class: 'user-photo') %>
       <div class='user-info'>
         <h2><%= user.name %></h2> <br>
         <p>Number of posts: <%= user.post_counter %></p>
       </div>
     </div> 
     <% end %>
   <% end %>
</section>