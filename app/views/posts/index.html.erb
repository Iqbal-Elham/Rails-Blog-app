<%= stylesheet_link_tag 'posts_styles'%>
<h1>Posts</h1>
<section class='user-header'>
  <%= image_tag(@user.photo) %>
  <div class='user-info'>
    <h2 class='user-name'><%= @user.name %></h2>
    <p class= 'user-posts'>Number of Posts: <%= @user.post_counter %></p>
  </div>
</section>

<section class='posts-list'>
  <h2>List of Posts</h2>
  <% @posts.each do |post| %>
    <div class='post-card'>
      <h3 class='post-title'><%= post.title %></h3>
      <%= link_to user_post_path(@user.id, post.id) do %>
        <p class='go-to-post'>Go to Post</p>
      <% end %>
      <p class='post-text'><%= post.text %></p>
      <div class='post-likes-comments'>
        <p class='post-likes'>Likes: <%= post.likes_counter %></p>
        <p class='post-comments'>Comments: <%= post.comments_counter %></p>
      </div>
      <hr />
      <div class='comments'>
        <% post.recent_comments.each do |comment| %>
          <div class='comment'>
            <p class='user-comment'><%= comment.author.name %>: </p>
            <p class='comment-text'><%= comment.text %></p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</section>